
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="MasrPrinterAvalonia.MainWindow"
        Title="برنامج الطباعة - Masr Printer" Width="900" Height="600"
        FontFamily="Arial">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="برنامج طباعة الباركود" 
                   FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1">
            
            <!-- Tab 1: Batch Printing -->
            <TabItem Header="طباعة متسلسلة">
                <StackPanel Margin="10" Spacing="15">
                    <TextBlock Text="طباعة أرقام متسلسلة مع باركود" FontSize="18" FontWeight="Bold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="من رقم:" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="txtStartNumber" Width="150" Text="1"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="إلى رقم:" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="txtEndNumber" Width="150" Text="50"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="نوع الباركود:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="cboBarcodeType" Width="150" SelectedIndex="0">
                            <ComboBoxItem Content="Code 128"/>
                            <ComboBoxItem Content="QR Code"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <Button x:Name="btnBatchPrint" Content="طباعة متسلسلة" 
                            Width="200" Height="40" FontSize="16"
                            Click="BtnBatchPrint_Click"/>
                    
                    <TextBlock x:Name="txtBatchStatus" Text="" Foreground="Green" FontSize="14"/>
                </StackPanel>
            </TabItem>
            
            <!-- Tab 2: Single Print -->
            <TabItem Header="طباعة مخصصة">
                <StackPanel Margin="10" Spacing="15">
                    <TextBlock Text="طباعة رقم واحد" FontSize="18" FontWeight="Bold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="الرقم:" VerticalAlignment="Center" Width="80"/>
                        <TextBox x:Name="txtSingleNumber" Width="150" Text="1"/>
                    </StackPanel>
                    
                    <CheckBox x:Name="chkIncludeBarcode" Content="طباعة مع باركود" IsChecked="True"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10" IsVisible="{Binding #chkIncludeBarcode.IsChecked}">
                        <TextBlock Text="نوع الباركود:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="cboSingleBarcodeType" Width="150" SelectedIndex="0">
                            <ComboBoxItem Content="Code 128"/>
                            <ComboBoxItem Content="QR Code"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <Button x:Name="btnSinglePrint" Content="طباعة" 
                            Width="200" Height="40" FontSize="16"
                            Click="BtnSinglePrint_Click"/>
                    
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                        <StackPanel x:Name="pnlPreview" HorizontalAlignment="Center">
                            <TextBlock Text="معاينة الطباعة" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <Image x:Name="imgPreview" Width="300" Height="150" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
            
            <!-- Tab 3: Settings -->
            <TabItem Header="الإعدادات">
                <StackPanel Margin="10" Spacing="15">
                    <TextBlock Text="إعدادات الطباعة" FontSize="18" FontWeight="Bold"/>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="مقاس الطباعة:" VerticalAlignment="Center" Width="120"/>
                        <ComboBox x:Name="cboPaperSize" Width="200" SelectedIndex="0">
                            <ComboBoxItem Content="58mm (حراري صغير)"/>
                            <ComboBoxItem Content="80mm (حراري كبير)"/>
                            <ComboBoxItem Content="A4"/>
                            <ComboBoxItem Content="Letter"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="عرض الورقة (مم):" VerticalAlignment="Center" Width="120"/>
                        <NumericUpDown x:Name="numPaperWidth" Width="150" Value="80" Minimum="30" Maximum="300"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="ارتفاع الورقة (مم):" VerticalAlignment="Center" Width="120"/>
                        <NumericUpDown x:Name="numPaperHeight" Width="150" Value="50" Minimum="20" Maximum="500"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="الرقم الحراري:" VerticalAlignment="Center" Width="120"/>
                        <NumericUpDown x:Name="numThermalLevel" Width="150" Value="50" Minimum="0" Maximum="100"/>
                        <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    <CheckBox x:Name="chkThermalPrinter" Content="طابعة حرارية" IsChecked="True"/>
                    
                    <Button Content="حفظ الإعدادات" Width="200" Height="40" 
                            Click="BtnSaveSettings_Click"/>
                    
                    <TextBlock x:Name="txtSettingsStatus" Text="" Foreground="Green" FontSize="14"/>
                </StackPanel>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
