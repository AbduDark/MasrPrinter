<Window x:Class="MasrPrinter.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="الإعدادات" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        FlowDirection="RightToLeft"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource SuccessColor}" Padding="20">
            <TextBlock Text="⚙️ إعدادات الطباعة" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30">
                <Border Style="{StaticResource CardPanel}" Margin="0">
                    <StackPanel>
                        <TextBlock Text="مواصفات الورق" Style="{StaticResource SubtitleText}"/>
                        
                        <TextBlock Text="عرض الورق (مم):" Style="{StaticResource LabelText}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="PaperWidthSlider" 
                                    Grid.Column="0"
                                    Minimum="30" 
                                    Maximum="150" 
                                    Value="80"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    ValueChanged="Slider_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Value, ElementName=PaperWidthSlider, StringFormat={}{0:0} مم}" 
                                       Style="{StaticResource BodyText}"
                                       VerticalAlignment="Center"
                                       Width="80"
                                       FontWeight="Bold"/>
                        </Grid>

                        <TextBlock Text="ارتفاع الورق (مم):" Style="{StaticResource LabelText}" Margin="10,20,10,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="PaperHeightSlider" 
                                    Grid.Column="0"
                                    Minimum="20" 
                                    Maximum="100" 
                                    Value="50"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    ValueChanged="Slider_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Value, ElementName=PaperHeightSlider, StringFormat={}{0:0} مم}" 
                                       Style="{StaticResource BodyText}"
                                       VerticalAlignment="Center"
                                       Width="80"
                                       FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardPanel}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="إعدادات الطابعة" Style="{StaticResource SubtitleText}"/>
                        
                        <TextBlock Text="اختيار الطابعة:" Style="{StaticResource LabelText}"/>
                        <ComboBox x:Name="PrinterComboBox" 
                                  Style="{StaticResource ModernComboBox}"
                                  Margin="10"/>

                        <TextBlock Text="مستوى الحرارة (0-100):" Style="{StaticResource LabelText}" Margin="10,10,10,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="ThermalLevelSlider" 
                                    Grid.Column="0"
                                    Minimum="0" 
                                    Maximum="100" 
                                    Value="50"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    ValueChanged="Slider_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Value, ElementName=ThermalLevelSlider, StringFormat={}{0:0}}" 
                                       Style="{StaticResource BodyText}"
                                       VerticalAlignment="Center"
                                       Width="80"
                                       FontWeight="Bold"/>
                        </Grid>

                        <TextBlock Text="جودة الباركود (DPI):" Style="{StaticResource LabelText}" Margin="10,20,10,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Slider x:Name="BarcodeQualitySlider" 
                                    Grid.Column="0"
                                    Minimum="150" 
                                    Maximum="600" 
                                    Value="300"
                                    TickFrequency="150"
                                    IsSnapToTickEnabled="True"
                                    Margin="10"
                                    VerticalAlignment="Center"
                                    ValueChanged="Slider_ValueChanged"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding Value, ElementName=BarcodeQualitySlider, StringFormat={}{0:0} DPI}" 
                                       Style="{StaticResource BodyText}"
                                       VerticalAlignment="Center"
                                       Width="80"
                                       FontWeight="Bold"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardPanel}" Margin="0,20,0,0">
                    <StackPanel>
                        <TextBlock Text="الرقم المخصص" Style="{StaticResource SubtitleText}"/>
                        
                        <TextBlock Text="الرقم الافتراضي للطباعة:" Style="{StaticResource LabelText}"/>
                        <TextBox x:Name="CustomNumberTextBox" 
                                 Text="1" 
                                 Style="{StaticResource ModernTextBox}"/>
                        
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="10,15,10,0">
                            <TextBlock Text="💡 هذا الرقم سيستخدم كقيمة افتراضية في نافذة الطباعة المخصصة" 
                                       Foreground="{StaticResource PrimaryColor}" 
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource CardPanel}" Margin="0,20,0,0" Background="#E8F5E9">
                    <StackPanel>
                        <TextBlock Text="💡 نصائح الإعدادات:" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,0,0,10"/>
                        <TextBlock Text="• الأحجام الشائعة: 80×50 مم، 100×70 مم" Foreground="{StaticResource TextColor}"/>
                        <TextBlock Text="• مستوى حرارة متوسط (50) مناسب لمعظم الطابعات" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="• جودة 300 DPI كافية للباركود العادي" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                        <TextBlock Text="• استخدم 600 DPI للطباعة عالية الجودة" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border x:Name="PreviewSizeBox" 
                        Style="{StaticResource CardPanel}" 
                        Margin="0,20,0,0" 
                        Background="#E3F2FD">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="معاينة الحجم" 
                                   Style="{StaticResource SubtitleText}"
                                   HorizontalAlignment="Center"/>
                        <Border x:Name="SizePreviewBorder"
                                BorderBrush="{StaticResource PrimaryColor}" 
                                BorderThickness="3"
                                Background="White"
                                Margin="10">
                            <TextBlock Text="حجم الملصق" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource SecondaryTextColor}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="White" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="💾 حفظ الإعدادات"
                        Click="SaveButton_Click"
                        Height="50"
                        FontSize="18">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#43A047"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Grid.Column="1"
                        Content="إغلاق"
                        Click="CloseButton_Click"
                        Height="50"
                        FontSize="18">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                            <Setter Property="Background" Value="{StaticResource SecondaryTextColor}"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#616161"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
