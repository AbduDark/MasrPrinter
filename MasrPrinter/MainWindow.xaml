<Window x:Class="MasrPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="برنامج طباعة الباركود - MasrPrinter" 
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="{StaticResource BackgroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryColor}" Padding="20">
            <StackPanel>
                <TextBlock Text="برنامج طباعة الباركود" 
                           FontSize="36" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="MasrPrinter - نظام احترافي لطباعة الباركود و QR Code" 
                           FontSize="16" 
                           Foreground="#E3F2FD"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40" Margin="0,0,15,0">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource PrimaryColor}" Data="M3,3H11V11H3V3M13,3H21V11H13V3M3,13H11V21H3V13M18,13H21V16H18V13M16,18H19V21H16V18M13,16H16V19H13V16M18,18H21V21H18V18Z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="طباعة متسلسلة" Style="{StaticResource SubtitleText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="اطبع عدة ملصقات بأرقام متسلسلة" Style="{StaticResource BodyText}" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,0,20"/>
                        
                        <Button x:Name="BatchPrintButton"
                                Content="📦 فتح طباعة متسلسلة"
                                Style="{StaticResource ModernButton}"
                                Click="BatchPrintButton_Click"
                                Height="60"
                                FontSize="18"/>
                        
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="10,20,10,0">
                            <StackPanel>
                                <TextBlock Text="مميزات الطباعة المتسلسلة:" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,10"/>
                                <TextBlock Text="✓ طباعة من رقم إلى رقم" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ اختيار نوع الباركود (Code128 / QR)" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ معاينة مباشرة" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ حفظ تلقائي لجميع الملصقات" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40" Margin="0,0,15,0">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource AccentColor}" Data="M19,19H5V5H19M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M13.96,12.29L11.21,15.83L9.25,13.47L6.5,17H17.5L13.96,12.29Z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="طباعة مخصصة" Style="{StaticResource SubtitleText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="اطبع ملصق واحد بمواصفات مخصصة" Style="{StaticResource BodyText}" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,0,20"/>
                        
                        <Button x:Name="CustomPrintButton"
                                Content="🎨 فتح طباعة مخصصة"
                                Style="{StaticResource AccentButton}"
                                Click="CustomPrintButton_Click"
                                Height="60"
                                FontSize="18"/>
                        
                        <Border Background="#FFF3E0" CornerRadius="8" Padding="15" Margin="10,20,10,0">
                            <StackPanel>
                                <TextBlock Text="مميزات الطباعة المخصصة:" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,0,0,10"/>
                                <TextBlock Text="✓ إدخال رقم أو نص مخصص" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ اختيار نوع الباركود" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ معاينة قبل الطباعة" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ طباعة مع أو بدون باركود" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40" Margin="0,0,15,0">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource SuccessColor}" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="الإعدادات" Style="{StaticResource SubtitleText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <TextBlock Text="تخصيص إعدادات الطباعة والورق" Style="{StaticResource BodyText}" Foreground="{StaticResource SecondaryTextColor}" Margin="0,0,0,20"/>
                        
                        <Button x:Name="SettingsButton"
                                Content="⚙️ فتح الإعدادات"
                                Click="SettingsButton_Click"
                                Height="60"
                                FontSize="18">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource ModernButton}">
                                    <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#43A047"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Border Background="#E8F5E9" CornerRadius="8" Padding="15" Margin="10,20,10,0">
                            <StackPanel>
                                <TextBlock Text="إعدادات متقدمة:" FontWeight="Bold" Foreground="{StaticResource SuccessColor}" Margin="0,0,0,10"/>
                                <TextBlock Text="✓ حجم الورق (العرض والارتفاع)" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ مستوى الطباعة الحرارية" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="✓ جودة الباركود" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40" Margin="0,0,15,0">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="{StaticResource PrimaryColor}" Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                                </Canvas>
                            </Viewbox>
                            <TextBlock Text="معلومات البرنامج" Style="{StaticResource SubtitleText}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Margin="10">
                            <TextBlock Text="📌 الإصدار: 1.0.0" Foreground="{StaticResource TextColor}" Margin="0,5"/>
                            <TextBlock Text="💻 منصة: .NET 8.0 - WPF" Foreground="{StaticResource TextColor}" Margin="0,5"/>
                            <TextBlock Text="📅 تاريخ التطوير: 2025" Foreground="{StaticResource TextColor}" Margin="0,5"/>
                        </StackPanel>
                        
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="15" Margin="10,20,10,0">
                            <StackPanel>
                                <TextBlock Text="💡 نصائح الاستخدام:" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,10"/>
                                <TextBlock Text="• ابدأ بضبط الإعدادات أولاً" Foreground="{StaticResource TextColor}" TextWrapping="Wrap"/>
                                <TextBlock Text="• استخدم الطباعة المتسلسلة للكميات الكبيرة" Foreground="{StaticResource TextColor}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                                <TextBlock Text="• اختبر طباعة مخصصة واحدة أولاً" Foreground="{StaticResource TextColor}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
