<Window x:Class="MasrPrinter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="برنامج طباعة الباركود - MasrPrinter" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        FlowDirection="RightToLeft"
        Background="{StaticResource BackgroundGradient}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="32,28">
            <Border.Effect>
                <DropShadowEffect Color="#6366F1" Opacity="0.4" BlurRadius="30" ShadowDepth="8" Direction="270"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="برنامج طباعة الباركود" 
                               FontSize="42" 
                               FontWeight="Bold" 
                               Foreground="White"
                               HorizontalAlignment="Right">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#000000" Opacity="0.2" BlurRadius="8" ShadowDepth="2"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="MasrPrinter - نظام احترافي لطباعة الباركود و QR Code" 
                               FontSize="16" 
                               Foreground="#E0E7FF"
                               HorizontalAlignment="Right"
                               Margin="0,6,0,0"/>
                </StackPanel>
                
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="50" 
                        Width="80" 
                        Height="80"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect Color="#FFFFFF" Opacity="0.3" BlurRadius="20" ShadowDepth="0"/>
                    </Border.Effect>
                    <Viewbox Width="45" Height="45">
                        <Canvas Width="24" Height="24">
                            <Path Fill="{StaticResource PrimaryColor}" 
                                  Data="M3,3H11V11H3V3M13,3H21V11H13V3M3,13H11V21H3V13M13,13H15V15H13V13M15,15H17V17H15V15M13,17H15V19H13V17M15,19H17V21H15V19M17,17H19V19H17V17M19,15H21V17H19V15M17,13H19V15H17V13M19,19H21V21H19V19Z"/>
                        </Canvas>
                    </Viewbox>
                </Border>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="32,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <Border Background="{StaticResource PrimaryGradient}" 
                                CornerRadius="16" 
                                Padding="16,12" 
                                Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="36" Height="36" Margin="0,0,12,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="White" Data="M3,3H11V11H3V3M13,3H21V11H13V3M3,13H11V21H3V13M18,13H21V16H18V13M16,18H19V21H16V18M13,16H16V19H13V16M18,18H21V21H18V18Z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="طباعة متسلسلة" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="اطبع عدة ملصقات بأرقام متسلسلة بضغطة واحدة" 
                                  FontSize="15" 
                                  Foreground="{StaticResource SecondaryTextColor}" 
                                  Margin="0,0,0,24"
                                  TextWrapping="Wrap"/>
                        
                        <Button x:Name="BatchPrintButton"
                                Content="📦 فتح طباعة متسلسلة"
                                Style="{StaticResource ModernButton}"
                                Click="BatchPrintButton_Click"
                                Height="56"
                                FontSize="18"/>
                        
                        <Border Background="{StaticResource PrimaryGradient}" 
                                CornerRadius="14" 
                                Padding="20" 
                                Margin="0,24,0,0">
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#AAAAAA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <StackPanel>
                                <TextBlock Text="✨ مميزات الطباعة المتسلسلة" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          FontSize="15"
                                          Margin="0,0,0,12"/>
                                <TextBlock Text="• طباعة من رقم إلى رقم" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• اختيار نوع الباركود (Code128 / QR)" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• معاينة مباشرة قبل الطباعة" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• حفظ تلقائي لجميع الملصقات" Foreground="White" FontSize="14" Margin="0,4"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <Border Background="{StaticResource AccentGradient}" 
                                CornerRadius="16" 
                                Padding="16,12" 
                                Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="36" Height="36" Margin="0,0,12,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="White" Data="M19,19H5V5H19M19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M13.96,12.29L11.21,15.83L9.25,13.47L6.5,17H17.5L13.96,12.29Z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="طباعة مخصصة" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="اطبع ملصق واحد بمواصفات مخصصة حسب احتياجك" 
                                  FontSize="15" 
                                  Foreground="{StaticResource SecondaryTextColor}" 
                                  Margin="0,0,0,24"
                                  TextWrapping="Wrap"/>
                        
                        <Button x:Name="CustomPrintButton"
                                Content="🎨 فتح طباعة مخصصة"
                                Style="{StaticResource AccentButton}"
                                Click="CustomPrintButton_Click"
                                Height="56"
                                FontSize="18"/>
                        
                        <Border Background="{StaticResource AccentGradient}" 
                                CornerRadius="14" 
                                Padding="20" 
                                Margin="0,24,0,0">
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#AAAAAA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <StackPanel>
                                <TextBlock Text="✨ مميزات الطباعة المخصصة" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          FontSize="15"
                                          Margin="0,0,0,12"/>
                                <TextBlock Text="• إدخال رقم أو نص مخصص" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• اختيار نوع الباركود" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• معاينة حية قبل الطباعة" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• طباعة مع أو بدون باركود" Foreground="White" FontSize="14" Margin="0,4"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="0" Grid.Row="1" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <Border Background="{StaticResource SuccessGradient}" 
                                CornerRadius="16" 
                                Padding="16,12" 
                                Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="36" Height="36" Margin="0,0,12,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="White" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="الإعدادات" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <TextBlock Text="تخصيص إعدادات الطباعة والورق والطابعة" 
                                  FontSize="15" 
                                  Foreground="{StaticResource SecondaryTextColor}" 
                                  Margin="0,0,0,24"
                                  TextWrapping="Wrap"/>
                        
                        <Button x:Name="SettingsButton"
                                Content="⚙️ فتح الإعدادات"
                                Style="{StaticResource SuccessButton}"
                                Click="SettingsButton_Click"
                                Height="56"
                                FontSize="18"/>
                        
                        <Border Background="{StaticResource SuccessGradient}" 
                                CornerRadius="14" 
                                Padding="20" 
                                Margin="0,24,0,0">
                            <Border.OpacityMask>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#FFFFFF" Offset="0"/>
                                    <GradientStop Color="#AAAAAA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.OpacityMask>
                            <StackPanel>
                                <TextBlock Text="✨ إعدادات متقدمة" 
                                          FontWeight="Bold" 
                                          Foreground="White" 
                                          FontSize="15"
                                          Margin="0,0,0,12"/>
                                <TextBlock Text="• حجم الورق (العرض والارتفاع)" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• اختيار الطابعة من القائمة" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• مستوى الطباعة الحرارية" Foreground="White" FontSize="14" Margin="0,4"/>
                                <TextBlock Text="• جودة الباركود (DPI)" Foreground="White" FontSize="14" Margin="0,4"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Grid.Row="1" Style="{StaticResource CardPanel}">
                    <StackPanel>
                        <Border Background="{StaticResource InfoColor}" 
                                CornerRadius="16" 
                                Padding="16,12" 
                                Margin="0,0,0,24">
                            <StackPanel Orientation="Horizontal">
                                <Viewbox Width="36" Height="36" Margin="0,0,12,0">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="White" Data="M13,9H11V7H13M13,17H11V11H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2Z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="معلومات البرنامج" 
                                          FontSize="24" 
                                          FontWeight="Bold"
                                          Foreground="White"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <StackPanel Margin="0,0,0,24">
                            <Border Background="{StaticResource BackgroundColor}" 
                                    CornerRadius="12" 
                                    Padding="16" 
                                    Margin="0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📌" FontSize="20" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="الإصدار" 
                                                  Foreground="{StaticResource SecondaryTextColor}" 
                                                  FontSize="12"/>
                                        <TextBlock Text="1.0.0" 
                                                  Foreground="{StaticResource TextColor}" 
                                                  FontWeight="Bold" 
                                                  FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{StaticResource BackgroundColor}" 
                                    CornerRadius="12" 
                                    Padding="16" 
                                    Margin="0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="💻" FontSize="20" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="المنصة" 
                                                  Foreground="{StaticResource SecondaryTextColor}" 
                                                  FontSize="12"/>
                                        <TextBlock Text=".NET 8.0 - WPF" 
                                                  Foreground="{StaticResource TextColor}" 
                                                  FontWeight="Bold" 
                                                  FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                            
                            <Border Background="{StaticResource BackgroundColor}" 
                                    CornerRadius="12" 
                                    Padding="16" 
                                    Margin="0,8">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📅" FontSize="20" Margin="0,0,10,0"/>
                                    <StackPanel>
                                        <TextBlock Text="تاريخ التطوير" 
                                                  Foreground="{StaticResource SecondaryTextColor}" 
                                                  FontSize="12"/>
                                        <TextBlock Text="2025" 
                                                  Foreground="{StaticResource TextColor}" 
                                                  FontWeight="Bold" 
                                                  FontSize="16"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <Border Background="#FEF3C7" 
                                CornerRadius="14" 
                                Padding="20" 
                                BorderBrush="{StaticResource WarningColor}"
                                BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="💡 نصائح الاستخدام" 
                                          FontWeight="Bold" 
                                          Foreground="{StaticResource WarningColor}" 
                                          FontSize="15"
                                          Margin="0,0,0,12"/>
                                <TextBlock Text="• ابدأ بضبط الإعدادات أولاً" 
                                          Foreground="{StaticResource TextColor}" 
                                          FontSize="14" 
                                          Margin="0,4"
                                          TextWrapping="Wrap"/>
                                <TextBlock Text="• استخدم الطباعة المتسلسلة للكميات الكبيرة" 
                                          Foreground="{StaticResource TextColor}" 
                                          FontSize="14" 
                                          Margin="0,4"
                                          TextWrapping="Wrap"/>
                                <TextBlock Text="• اختبر طباعة مخصصة واحدة أولاً" 
                                          Foreground="{StaticResource TextColor}" 
                                          FontSize="14" 
                                          Margin="0,4"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
